<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
        <property name="triggers">
            <list>
                <!--<ref local="stestSchedule"/>-->
            </list>
        </property>
    </bean>
    <bean id="stest" class="com.gary.testClass.MyTest"/>
    <bean id="stestSchedule" class="org.springframework.scheduling.quartz.CronTriggerBean">
        <property name="jobDetail">
            <ref bean="methodTest"/>
        </property>
        <property name="cronExpression">
            <value>0 0/1 * ? * MON-SUN</value>
        </property>
    </bean>
    <bean id="methodTest" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
        <property name="targetObject">
            <ref bean="stest" />
        </property>
        <property name="targetMethod">
            <value>scheduleTest</value>
        </property>
    </bean>

</beans>